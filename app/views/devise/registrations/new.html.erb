<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :first_name, class: "form-label", for: "first_name" %>
    <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "first_name" %>
  </div>

  <div class="mb-3">
    <%= f.label :last_name, class: "form-label", for: "last_name" %>
    <%= f.text_field :last_name, class: "form-control", id: "last_name" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label", for: "email" %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label", for: "password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label", for: "password_confirmation" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password_confirmation" %>
  </div>

    <%= f.submit "Sign up", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
