<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, for: "email", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, for: "password", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", id: "password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, id: "checkbox", class: "form-check-input" %>
      <%= f.label :remember_me, for: "checkbox", class: "form-check-label" %>
    </div>
  <% end %>

    <%= f.submit "Log in", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
